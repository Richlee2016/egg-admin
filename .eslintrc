{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "__DEV__": true,
    "define": true
  },
  "plugins": ["prettier","flowtype","import","react","react-hooks","jsx-a11y"],
  "extends": ["react-app","eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": 0,
    "no-debugger": 0,
    "no-unused-vars":"warn",
    "align": [true, "statements"]
  }
}
